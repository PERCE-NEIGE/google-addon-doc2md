{
  "compilerOptions": {
    "allowJs": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "strictNullChecks": true,
    "target": "es3",
    "outDir": "./dist",
    "lib": ["es2015"]
  },
  "include": [
    "./src/**/*"
  ]
}
